<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Dashboard</title>
    <link
      rel="icon"
      href="/directoryManagement/images/faviconLogo.png"
      type="image/x-icon"
    />
    <link rel="stylesheet" href="/directoryManagement/libs/bootstrap.min.css" />
    <link rel="stylesheet" href="/directoryManagement/CSS/styles.css" />
    <script src="/directoryManagement/JS/sessionManager.js" defer></script>
  </head>
  <body>
    <!-- Navigation Buttons -->
    <div class="right-fixed-buttons">
      <!-- Profile Logo -->
      <div class="profile-container" id="profileContainer">
        <img
          src="/directoryManagement/images/viewProfile.png"
          alt="Profile"
          class="profile-icon"
          id="profileLogo"
        />
      </div>
      <!-- Sign Out Button -->
      <button class="btn btn-danger" id="signoutButton">
        <img
          src="/directoryManagement/images/logoutButton.png"
          alt="Sign Out"
          class="navigation-icon"
        />
        Sign Out
      </button>
    </div>

    <!-- Main Content of Dashboard -->
    <div class="container my-5">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <h1 class="text-center mb-4">Directory Management</h1>
      <div class="row">
        <!-- Card 1 -->
        <div class="col-md-2 mb-4">
          <div class="card shadow-sm h-100" id="createUserCard">
            <img
              src="/directoryManagement/images/createUser.png"
              class="card-img-top"
              alt="Create User"
            />
            <div class="card-body">
              <h5 class="card-title text-center">Create User</h5>
            </div>
          </div>
        </div>

        <!-- Card 2 -->
        <div class="col-md-2 mb-4">
          <div class="card shadow-sm h-100" id="listUsersCard">
            <img
              src="/directoryManagement/images/user.png"
              class="card-img-top"
              alt="List Users"
            />
            <div class="card-body">
              <h5 class="card-title text-center">Manage User Actions</h5>
            </div>
          </div>
        </div>

        <!-- Card 3 -->
        <div class="col-md-2 mb-4">
          <div class="card shadow-sm h-100" id="listOrganizationsCard">
            <img
              src="/directoryManagement/images/Organizations.png"
              class="card-img-top"
              alt="List Organizations"
            />
            <div class="card-body">
              <h5 class="card-title text-center">Manage Organizations</h5>
            </div>
          </div>
        </div>

        <!-- Card 4 -->
        <div class="col-md-2 mb-4">
          <div class="card shadow-sm h-100" id="createGroupCard">
            <img
              src="/directoryManagement/images/groups.png"
              class="card-img-top"
              alt="Create Group"
            />
            <div class="card-body">
              <h5 class="card-title text-center">Manage Group</h5>
            </div>
          </div>
        </div>

        <!-- Card 5 -->
        <div class="col-md-2 mb-4">
          <div class="card shadow-sm h-100" id="resetPasswordCard">
            <img
              src="/directoryManagement/images/resetPassword.png"
              class="card-img-top"
              alt="Reset Password"
            />
            <div class="card-body">
              <h5 class="card-title text-center">Reset User Password</h5>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- Profile Modal -->
    <div class="profile-modal" id="profileModal">
      <div class="modal-content">
        <!-- Profile content is dynamically injected by JS -->
        <h2>Profile</h2>
        <p><strong>Name:</strong> <span id="userName"></span></p>
        <p><strong>Role:</strong> <span id="userRole"></span></p>
        <p><strong>OU:</strong> <span id="userOU"></span></p>
      </div>
    </div>

    <!-- Scripts -->
    <script src="/directoryManagement/libs/jquery.js"></script>
    <script src="/directoryManagement/libs/bootstrap.min.js"></script>
    <script src="/directoryManagement/JS/headerButtons.js"></script>
    <script src="/directoryManagement/JS/routesRender.js"></script>
    <script src="/directoryManagement/libs/crypto-js.min.js"></script>
  </body>
</html>
