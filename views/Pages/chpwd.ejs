<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Reset Password</title>
    <link rel="icon" href="/directoryManagement/images/faviconLogo.png" type="image/x-icon" />
    <link rel="stylesheet" href="/directoryManagement/libs/bootstrap.min.css" />
    <link rel="stylesheet" href="/directoryManagement/CSS/styles.css" />
    <script src="/directoryManagement/JS/sessionManager.js" defer></script>
  </head>
  <body>
    <!-- Navigation Buttons -->
    <div class="left-fixed-buttons">
      <div class="button-row">
        <button class="btn btn-secondary" id="backButton">
          <img
            src="/directoryManagement/images/backButton.png"
            alt="Back"
            class="navigation-icon"
          />
          Back
        </button>
        <button class="btn btn-primary" id="homeButton">
          <img
            src="/directoryManagement/images/homeButton.png"
            alt="Home"
            class="navigation-icon"
          />
          Home
        </button>
      </div>
    </div>

    <div class="right-fixed-buttons">
      <button class="btn btn-danger" id="signoutButton">
        <img
          src="/directoryManagement/images/logoutButton.png"
          alt="Sign Out"
          class="navigation-icon"
        />
        Sign Out
      </button>
    </div>

    <div class="container my-5">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
      <h1 class="text-center mb-4">Change Password</h1>
      <div class="card mx-auto no-pointer resetPwd-layout">
        <div class="card-body p-4">
          <form id="changePasswordForm">
            <div class="form-row">
              <div class="form-group col-8">
                <label for="username">Username</label>
                <input
                  type="text"
                  class="form-control"
                  id="username"
                  readonly
                  required
                />
              </div>
              <div class="form-group col-md-4">
                <label for="userOU">OU</label>
                <input
                  type="text"
                  class="form-control"
                  id="userOU"
                  readonly
                  required
                />
              </div>
            </div>

            <!-- Password fields with toggle icons -->
            <div class="form-group">
              <label for="currentPassword" class="required"
                >Current Password</label
              >
              <div class="input-group">
                <input
                  type="password"
                  class="form-control"
                  id="currentPassword"
                  required
                />
                <div class="input-group-append">
                  <button
                    class="btn btn-outline-secondary"
                    type="button"
                    id="toggleCurrentPassword"
                  >
                    <img
                      id="toggleCurrentPasswordIcon"
                      src="/directoryManagement/images/hidden.png"
                      alt="Show Password"
                      class="password-icon"
                    />
                  </button>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label for="newPassword" class="required">New Password</label>
              <div class="input-group">
                <input
                  type="password"
                  class="form-control"
                  id="newPassword"
                  required
                />
                <div class="input-group-append">
                  <button
                    class="btn btn-outline-secondary"
                    type="button"
                    id="toggleNewPassword"
                  >
                    <img
                      id="toggleNewPasswordIcon"
                      src="/directoryManagement/images/hidden.png"
                      alt="Show Password"
                      class="password-icon"
                    />
                  </button>
                </div>
              </div>
            </div>

            <div class="form-group">
              <label for="confirmPassword" class="required"
                >Confirm Password</label
              >
              <div class="input-group">
                <input
                  type="password"
                  class="form-control"
                  id="confirmPassword"
                  required
                />
                <div class="input-group-append">
                  <button
                    class="btn btn-outline-secondary"
                    type="button"
                    id="toggleConfirmPassword"
                  >
                    <img
                      id="toggleConfirmPasswordIcon"
                      src="/directoryManagement/images/hidden.png"
                      alt="Show Password"
                      class="password-icon"
                    />
                  </button>
                </div>
              </div>
            </div>

            <button type="submit" class="btn btn-primary btn-block">
              Reset Password
            </button>
          </form>
          <div id="message" class="mt-3"></div>
        </div>
      </div>
    </div>

    <script src="/directoryManagement/libs/jquery.js"></script>
    <script src="/directoryManagement/libs/bootstrap.min.js"></script>
    <script src="/directoryManagement/JS/chpwdScript.js"></script>
    <script src="/directoryManagement/JS/headerButtons.js"></script>
    <script src="/directoryManagement/libs/crypto-js.min.js"></script>
  </body>
</html>
