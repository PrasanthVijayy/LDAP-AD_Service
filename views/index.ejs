<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login</title>
    <link
      rel="icon"
      href="/directoryManagement/images/faviconLogo.png"
      type="image/x-icon"
    />
    <link rel="stylesheet" href="/directoryManagement/libs/bootstrap.min.css" />
    <link rel="stylesheet" href="/directoryManagement/CSS/styles.css" />
    <script src="/directoryManagement/JS/sessionManager.js" defer></script>
  </head>
  <body class="login-page">
    <div
      class="container d-flex align-items-center justify-content-center vh-100"
    >
      <div class="card p-5 shadow-lg no-pointer">
        <!-- Navigation Tabs for Login Options -->
        <ul class="nav nav-tabs" id="loginTabs" role="tablist">
          <li class="nav-item" role="presentation">
            <a
              class="nav-link active"
              id="loginTab"
              data-bs-toggle="tab"
              href="#loginFormTab"
              role="tab"
              aria-controls="loginFormTab"
              aria-selected="true"
              >General Login</a
            >
          </li>
          <li class="nav-item" role="presentation">
            <a
              class="nav-link"
              id="samlTab"
              data-bs-toggle="tab"
              href="#samlTabContent"
              role="tab"
              aria-controls="samlTabContent"
              aria-selected="false"
              >SSO Login (SAML)</a
            >
          </li>
        </ul>

        <div class="tab-content" id="loginTabsContent">
          <!-- Username/Password Login Form -->
          <div
            class="tab-pane fade show active"
            id="loginFormTab"
            role="tabpanel"
            aria-labelledby="loginTab"
          >
            <div class="d-flex justify-content-between align-items-center mb-4">
              <h2 class="text-center mb-0">Login</h2>
              <!-- Dropdown for LDAP/AD -->
              <select id="authType" class="form-select w-auto">
                <option value="ldap" selected>My Ldap</option>
                <option value="ad">Cylock</option>
              </select>
            </div>

            <form id="loginForm">
              <!-- Username and Organizational Unit input in the same row -->
              <div class="form-row mb-3">
                <div class="col-md-6">
                  <div class="form-group" id="usernameGroup">
                    <label for="username" class="required">Username</label>
                    <input
                      type="text"
                      class="form-control"
                      id="username"
                      name="username"
                      placeholder="Enter username"
                      required
                    />
                  </div>
                </div>
                <div class="col-md-6">
                  <div class="form-group" id="ouGroup">
                    <label for="ouSelect" class="required"
                      >Organizational Unit</label
                    >
                    <input
                      type="text"
                      class="form-control"
                      id="ouSelect"
                      name="ouSelect"
                      placeholder="Enter Organizational Unit"
                      required
                    />
                  </div>
                </div>
              </div>

              <!-- Email input for AD login (remains for AD login) -->
              <div class="form-group d-none" id="emailGroup">
                <label for="email" class="required">Email</label>
                <div class="input-group">
                  <input
                    type="text"
                    class="form-control"
                    id="email"
                    name="email"
                    placeholder="Enter your email"
                  />
                </div>
              </div>

              <!-- Password input with toggle icon -->
              <div class="form-group">
                <label for="password" class="required">Password</label>
                <div class="input-group">
                  <input
                    type="password"
                    class="form-control"
                    id="password"
                    name="password"
                    placeholder="Enter password"
                    required
                  />
                  <div class="input-group-append">
                    <button
                      class="btn btn-outline-secondary"
                      type="button"
                      id="togglePassword"
                    >
                      <img
                        id="togglePasswordIcon"
                        src="/directoryManagement/images/hidden.png"
                        alt="Toggle Password"
                        class="toggle-icon"
                      />
                    </button>
                  </div>
                </div>
              </div>

              <!-- User type radio buttons in a separate row -->
              <div class="form-group" id="userTypeGroup">
                <label>Type:</label>
                <div class="form-check form-check-inline">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="userType"
                    id="user"
                    value="user"
                    checked
                  />
                  <label class="form-check-label" for="user">User</label>
                </div>
                <div class="form-check form-check-inline">
                  <input
                    class="form-check-input"
                    type="radio"
                    name="userType"
                    id="admin"
                    value="admin"
                  />
                  <label class="form-check-label" for="admin">Admin</label>
                </div>
              </div>

              <!-- Submit button -->
              <button type="submit" class="btn btn-primary btn-block">
                Login
              </button>
            </form>
          </div>

          <!-- SSO Login (SAML) Tab Content -->
          <div
            class="tab-pane fade"
            id="samlTabContent"
            role="tabpanel"
            aria-labelledby="samlTab"
          >
            <h2 class="text-center mb-4">Login with SSO</h2>
            <p class="text-center mb-4">Use Single Sign-On (SSO) via SAML</p>
            <!-- Button to initiate SSO login (redirects to IdP) -->
            <div class="text-center">
              <a href="/saml/login" class="btn btn-primary btn-block"
                >Login with SAML</a
              >
            </div>
          </div>
        </div>

        <!-- Footer Section -->
        <footer class="text-center mt-4 py-3">
          <p>
            <strong
              >Powered by <span class="footer-color">Cybernexa</span></strong
            >
          </p>
        </footer>
      </div>
    </div>

    <script src="/directoryManagement/libs/jquery.js"></script>
    <script src="/directoryManagement/libs/bootstrap.min.js"></script>
    <script src="/directoryManagement/JS/script.js"></script>
    <script src="/directoryManagement/libs/crypto-js.min.js"></script>
  </body>
</html>
